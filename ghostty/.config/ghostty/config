# Minimalist Zen Terminal Configuration
# Pure elegance through simplicity

# Warm, comfortable colors inspired by natural earth tones
background = #2d2a2e
foreground = #fcfcfa

# Subtle accent colors
cursor-color = #ff6188
selection-background = #423f42
selection-foreground = #fcfcfa

# Clean typography
font-family = "JetBrains Mono Nerd Font"
font-size = 12
font-feature = +liga
font-feature = +calt

# Comfortable window settings
window-theme = dark
window-decoration = true
window-padding-x = 14
window-padding-y = 10

# Gentle transparency for depth
background-opacity = 0.75
background-blur-radius = 12

# Shell integration
shell-integration = fish
shell-integration-features = cursor,sudo,title

# Essential functionality
clipboard-read = allow
clipboard-write = allow
copy-on-select = true
mouse-hide-while-typing = true
scrollback-limit = 10000

# Simple keybindings
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+w=close_surface
keybind = ctrl+plus=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1
keybind = ctrl+zero=reset_font_size

# Refined color palette - Monokai Pro inspired
palette = 0=#2d2a2e
